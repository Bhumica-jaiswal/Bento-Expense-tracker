# MongoDB Atlas Connection (Cloud Only)
# Replace <username>, <password>, <cluster-url>, and <database-name> with your actual values
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority

# JWT Secret for authentication (use a strong, random string)
JWT_SECRET=your_secure_jwt_secret_key_here

# Gemini API Key for AI features
GEMINI_API_KEY=your_gemini_api_key_here

# Keep Alive URL (for production deployment)
KEEP_ALIVE_URL=your_keep_alive_url_here

# Server Port
PORT=5000
